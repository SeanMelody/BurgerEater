{{!-- h1 title --}}
<h1>Let's Eat some Burgers!</h1>

{{!-- Burgers to eat list title--}}
<h3>Burgers to Eat!</h3>

{{!-- Burgers to eat list --}}
<ul class="to-eat">
    {{#each burgers}}
    {{#unless devoured}}
    {{> burgers/burger-block devoured=true}}
    {{/unless}}
    {{/each}}
</ul>
{{!-- Burgers that have been eaten list title --}}
<h3>Burgers Eaten</h3>

{{!-- Burgers eaten list --}}
<ul class="eaten">
    {{#each burgers}}
    {{#if devoured}}
    {{> burgers/burger-block devoured=false}}
    {{/if}}
    {{/each}}
</ul>

{{!-- Add a burger section --}}

{{!-- Add a burger title --}}
<h3 class="add-burger">Add a Burger</h3>
<form class="new-burger-form">

    <div class="form-group">
        <label for="new-burger">Add a Burger:</label>
        <input type="text" class="new-burger" name="burger_name">
    </div>
